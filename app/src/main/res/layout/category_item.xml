<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="18dp"
    android:layout_height="238dp">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_54_1"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageArea"
        android:layout_width="332dp"
        android:layout_height="136dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:srcCompat="@drawable/component_64" />

    <TextView
        android:id="@+id/titleArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/noto_sans_kr"
        android:lineSpacingExtra="6sp"
        android:textColor="#191919"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageArea"
        android:text="이름" />

    <TextView
        android:id="@+id/detailArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-17dp"
        android:fontFamily="@font/noto_sans_kr"
        android:lineSpacingExtra="9sp"
        android:textColor="#191919"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/titleArea"
        app:layout_constraintTop_toBottomOf="@+id/titleArea"
        android:text="음식점 설명" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:lineSpacingExtra="8sp"
        android:textColor="#191919"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/detailArea"
        app:layout_constraintTop_toBottomOf="@+id/detailArea"
        android:text="영업 정보" />

    <TextView
        android:id="@+id/timeArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/noto_sans_kr"
        android:lineSpacingExtra="9sp"
        android:textColor="#191919"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView28"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        android:text="영업 정보 상세" />

    <TextView
        android:id="@+id/gradeArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:lineSpacingExtra="9sp"
        android:textColor="#191919"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintBaseline_toBaselineOf="@+id/titleArea"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="평점" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="18dp"
        android:layout_marginTop="8dp"
        android:layout_height="18dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/gradeArea"
        app:layout_constraintTop_toBottomOf="@+id/imageArea"
        app:srcCompat="@drawable/star_fill" />

    <ImageView
        android:id="@+id/openArea"
        android:layout_width="74dp"
        android:layout_height="24dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="63dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView43"
        app:srcCompat="@drawable/component_65" />

    <CheckBox
        android:id="@+id/heartArea"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:button="@drawable/favorite"
        app:layout_constraintEnd_toEndOf="@+id/imageArea"
        app:layout_constraintTop_toTopOf="@+id/imageView10"/>

</androidx.constraintlayout.widget.ConstraintLayout>