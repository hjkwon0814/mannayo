<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/idbutton"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:background="@drawable/rectangle_16_2"
        android:text="아이디 찾기"
        app:layout_constraintBaseline_toBaselineOf="@+id/pwbutton"
        app:layout_constraintEnd_toStartOf="@+id/pwbutton"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/noto_sans_kr"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="#767676"
        android:textSize="14sp"
        android:textStyle="normal"
        />
    <Button
        android:id="@+id/pwbutton"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_16"
        android:text="비밀번호 찾기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idbutton"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="#ffa463"
        android:textSize="14sp"
        android:textStyle="normal"/>

    <com.example.mannayoclient.TextClear
        android:id="@+id/editPw"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:background="#f1f1f5"
        android:ems="10"
        android:textColor="#191919"
        android:fontFamily="@font/noto_sans_kr"
        android:hint="새 비밀번호를 입력해주세요."
        android:layout_marginTop="40dp"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <com.example.mannayoclient.TextClear
        android:id="@+id/editPw2"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:background="#f1f1f5"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="비밀번호를 다시 한번 입력해주세요."
        android:inputType="phone"
        android:paddingStart="12dp"
        android:textColor="#191919"
        android:textSize="14sp"
        android:textStyle="normal"
        android:fontFamily="@font/noto_sans_kr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPw" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="238dp"
        android:layout_marginTop="40dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwbutton"
        app:srcCompat="@drawable/new_pw" />

    <ImageView
        android:id="@+id/go_pw3"
        android:layout_width="314dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/component_20" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="312dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/component_2" />

    <View
        android:id="@+id/view3"
        android:layout_width="312dp"
        android:layout_height="2dp"
        android:background="#ed1c24"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPw2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="270dp"
        android:visibility="gone"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/editPw2"
        app:layout_constraintTop_toBottomOf="@+id/editPw2"
        app:srcCompat="@drawable/newidcomment" />



</androidx.constraintlayout.widget.ConstraintLayout>