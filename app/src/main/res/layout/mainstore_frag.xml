<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8fa">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView57"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageView58"
                android:layout_width="340dp"
                android:layout_height="347dp"
                android:layout_marginTop="146dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/component_88" />

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toStartOf="@+id/review_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView58"
                app:srcCompat="@drawable/component_85" />

            <ImageView
                android:id="@+id/review_button"
                android:layout_width="170dp"
                android:layout_height="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/menu_button"
                app:layout_constraintTop_toTopOf="@+id/menu_button"
                app:srcCompat="@drawable/component_87" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:lineSpacingExtra="4sp"
                android:text="대표메뉴"
                android:textColor="#191919"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@+id/mainmenurv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_button" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainmenurv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView41" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_kr"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="-6sp"
                android:textColor="#191919"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView58"
                tools:text="크로플각 돈암점" />

            <ImageView
                android:id="@+id/imageView61"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="4dp"
                app:layout_constraintEnd_toStartOf="@+id/textView34"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView27"
                app:layout_constraintTop_toTopOf="@+id/imageView58"
                app:srcCompat="@drawable/star_fill" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr"
                android:lineSpacingExtra="6sp"
                android:text="평점"
                android:textColor="#191919"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/imageView61"
                app:layout_constraintEnd_toStartOf="@+id/textView27"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView61"
                app:layout_constraintTop_toTopOf="@+id/imageView61" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="서울 성북구 동소문로 179-48"
                android:textColor="#191919"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/imageView58"
                app:layout_constraintStart_toStartOf="@+id/imageView58"
                app:layout_constraintTop_toBottomOf="@+id/imageView61" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="230dp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:lineSpacingExtra="6sp"
                android:text="영업 시간"
                android:textColor="#191919"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@+id/imageView58"
                app:layout_constraintTop_toTopOf="@+id/imageView58" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:lineSpacingExtra="6sp"
                android:text="연락처"
                android:textColor="#191919"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@+id/textView35"
                app:layout_constraintTop_toBottomOf="@+id/textView35" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/noto_sans_kr"
                android:lineSpacingExtra="6sp"
                android:text="매일 오전 10:00 - 새벽 00:00 "
                android:textColor="#191919"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/textView35"
                app:layout_constraintStart_toEndOf="@+id/textView35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr"
                android:lineSpacingExtra="6sp"
                android:text="050-4933-7883"
                android:textColor="#191919"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/textView37"
                app:layout_constraintStart_toStartOf="@+id/textView36" />

            <ImageView
                android:id="@+id/imageView62"
                android:layout_width="1dp"
                android:layout_height="49dp"
                android:layout_marginLeft="42dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView37"
                app:layout_constraintStart_toStartOf="@+id/imageView58"
                app:layout_constraintTop_toTopOf="@+id/textView35"
                app:srcCompat="@drawable/line_6" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView55"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/expand_left" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/mycheck"
        android:button="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>