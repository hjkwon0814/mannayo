<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".InformationActivity">

    <ImageView
        android:id="@+id/imageView83"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close_round" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"
        android:text="프로필 사진/닉네임 변경"
        android:textColor="#191919"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView83" />

    <ImageView
        android:id="@+id/infor_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView69"
        app:srcCompat="@drawable/component_92" />

    <ImageView
        android:id="@+id/infor_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/infor_photo"
        app:layout_constraintEnd_toEndOf="@+id/infor_photo"
        app:srcCompat="@drawable/component_73" />


    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/noto_sans_kr"
        android:lineSpacingExtra="8sp"
        android:text="닉네임 변경"
        android:textColor="#191919"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/infor_nick"
        app:layout_constraintTop_toBottomOf="@+id/infor_photo" />

    <com.example.mannayoclient.TextClear
        android:id="@+id/infor_nick"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:background="@drawable/information3"
        android:ems="10"
        android:fontFamily="@font/noto_sans_kr"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:lineSpacingExtra="6sp"
        android:textColor="#191919"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView66" />

    <ImageView
        android:id="@+id/nick_button"
        android:layout_width="130dp"
        android:layout_height="82dp"
        android:layout_marginTop="165dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infor_nick"
        app:srcCompat="@drawable/information5" />

    <ImageView
        android:id="@+id/imageView_nick"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/infor_nick"
        app:layout_constraintTop_toBottomOf="@+id/infor_nick"
        app:srcCompat="@drawable/infor1" />

    <ImageView
        android:id="@+id/imageView_nick2"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/infor_nick"
        app:layout_constraintTop_toBottomOf="@+id/infor_nick"
        app:srcCompat="@drawable/information8" />



</androidx.constraintlayout.widget.ConstraintLayout>