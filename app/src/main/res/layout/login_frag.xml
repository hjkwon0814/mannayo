<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="683dp"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/submit"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="#ffa463"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_pw" />

    <TextView
        android:id="@+id/id_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디/비밀번호 찾기"
        app:layout_constraintEnd_toEndOf="@+id/submit"
        tools:layout_editor_absoluteY="334dp" />

    <RadioButton
        android:id="@+id/login_state"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:checked="true"
        android:gravity="center"
        android:text="로그인 상태 유지"
        android:textColor="#191919"
        android:textSize="13sp"
        android:textStyle="normal"
        android:theme="@style/RadioButtonStyle"
        app:layout_constraintBaseline_toBaselineOf="@+id/id_pw"
        app:layout_constraintStart_toStartOf="@+id/submit" />

    <EditText
        android:id="@+id/login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="147dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_id" />

    <TextView
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="621dp" />

    <ImageButton
        android:id="@+id/google"
        android:layout_width="87dp"
        android:layout_height="66dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="204dp"
        app:layout_constraintStart_toEndOf="@+id/login_state"
        app:layout_constraintTop_toBottomOf="@+id/id_pw"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="551dp" />

</androidx.constraintlayout.widget.ConstraintLayout>